<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log"
    android:orientation="vertical"
    tools:context="ro.ase.eu.aslapplication.QuizExpresiiActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="370dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_scoreE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scor: 0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/text_view_question_countE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_view_score"
                    android:text="Intrebare: 1/x"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/text_view_categoryE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_view_question_count"
                    android:freezesText="true"
                    android:text="Categorie: "
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/text_view_countdownE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="00:30"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/text_view_questionE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/radio_group"
                    android:layout_marginBottom="16dp"
                    android:text="Here will be the question text\nHere will be the question text\nHere will be the question text"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
                <WebView
                    android:id="@+id/webViewQuizE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
                <RadioGroup
                    android:id="@+id/radio_groupE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <RadioButton
                        android:id="@+id/radio_button1E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option 1" />

                    <RadioButton
                        android:id="@+id/radio_button2E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option 2" />

                    <RadioButton
                        android:id="@+id/radio_button3E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option 3" />

                </RadioGroup>

                <Button
                    android:id="@+id/button_confirm_nextE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/radio_group"
                    android:layout_marginTop="16dp"
                    android:text="Confirmare"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btnsignstyle"/>

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>

