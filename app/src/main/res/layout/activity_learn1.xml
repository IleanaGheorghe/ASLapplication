                    android:text="@string/animals"
                    android:textAlignment="center"
                    android:textColor="@color/clickButton"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivMancare"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/mancare" />
                <TextView
                    android:id="@+id/tvMancare"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:text="@string/food"
                    android:textAlignment="center"
                    android:textColor="@color/clickButton"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/ivLocuri"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/locuri" />
                <TextView
                    android:id="@+id/tvLocuri"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:text="@string/places"
                    android:textAlignment="center"
                    android:textColor="@color/clickButton"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/ivOrase"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/orase" />
                <TextView
                    android:id="@+id/tvOrase"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
